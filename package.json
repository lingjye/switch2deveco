{
    "name": "cursor2deveco",
    "displayName": "Cursor2DevEco",
    "description": "Open files or projects in DevEco Studio from Cursor.",
    "version": "1.0.1",
    "publisher": "your-name",
    "icon": "icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/your-name/cursor2deveco.git"
    },
    "engines": {
        "vscode": "^1.93.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:cursor2deveco.openFile",
        "onCommand:cursor2deveco.openProject",
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/node": "^20.0.0",
        "@types/vscode": "^1.93.0",
        "typescript": "^5.0.0"
    },
    "contributes": {
        "commands": [
            {
                "command": "cursor2deveco.openFile",
                "title": "Open File in DevEco Studio",
                "category": "Cursor2DevEco"
            },
            {
                "command": "cursor2deveco.openProject",
                "title": "Open Project in DevEco Studio",
                "category": "Cursor2DevEco"
            }
        ],
        "keybindings": [
            {
                "command": "cursor2deveco.openFile",
                "key": "alt+shift+o",
                "mac": "alt+shift+o",
                "when": "editorTextFocus"
            },
            {
                "command": "cursor2deveco.openProject",
                "key": "alt+shift+p",
                "mac": "alt+shift+p"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "command": "cursor2deveco.openFile",
                    "group": "navigation@1",
                    "when": "resourceExtname =~ /\\.(ts|js|ets|tsx|jsx)$/"
                }
            ],
            "explorer/context": [
                {
                    "command": "cursor2deveco.openFile",
                    "group": "navigation@1",
                    "when": "!explorerResourceIsFolder"
                },
                {
                    "command": "cursor2deveco.openProject",
                    "group": "navigation@2",
                    "when": "explorerResourceIsFolder"
                }
            ]
        },
        "configuration": {
            "title": "Cursor2DevEco",
            "properties": {
                "cursor2deveco.devEcoPath": {
                    "type": "string",
                    "default": "/Applications/DevEco-Studio.app",
                    "description": "Path to DevEco Studio executable.",
                    "scope": "machine"
                },
                "cursor2deveco.showToasts": {
                    "type": "boolean",
                    "default": true,
                    "description": "Show toast notifications when opening files/projects in DevEco Studio.",
                    "scope": "window"
                }
            }
        }
    }
}
