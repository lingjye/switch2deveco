{
    "compilerOptions": {
        "target": "ES2017",
        "module": "commonjs",
        "lib": ["ES2017"],
        "outDir": "out",
        "rootDir": "src",
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "out"
    ]
} 